+		dprintk("Openning slave %s failed\n", slave_dev->name);
+		goto err_unset_master;
 	}
 
 	new_slave->dev = slave_dev;
@@ -1401,7 +1400,7 @@ int bond_enslave(struct net_device *bond
 		 */
 		res = bond_alb_init_slave(bond, new_slave);
 		if (res) {
-			goto err_unset_master;
