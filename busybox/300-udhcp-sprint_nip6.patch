+/* Convert IPv6 address into string */
+int FAST_FUNC sprint_nip6(char *dest, const uint8_t *ip6)
+{
+	int i, len = 0;
+
+	for (i = 0; i < 16; i += 2)
+	{
+		if (i > 0)
+			dest[len++] = ':';
+		bin2hex(dest + len, (const char * )&ip6[i], 2);
+		len += 4;
+	}
+	dest[len] = '\0';
+
+	return len;
+}
