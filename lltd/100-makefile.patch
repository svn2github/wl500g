+++ lltd/Makefile	2010-06-30 12:58:30.000000000 +0000
@@ -0,0 +1,24 @@
+VPATH = src
+
+ifneq ($(MAKECMDGOALS),clean)
+include $(TOP)/.config
+endif
+
+CC ?= $(CC)
+LD = $(CC)
+
+CFLAGS += -I. -I$(TOP)/shared -I$(SRCBASE)/include
